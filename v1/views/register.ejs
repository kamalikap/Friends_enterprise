<% include ./partials/header %>

    <div class="row">
        <h1 style= "text-align: center;">Application form</h1>
        <div style="width: 60%; margin:30px auto;">
            <form action= "/campgrounds" method= "POST">
                
                <div>
                    
                    <div class="col-lg-12 col-md-12 col-sm-12 " style=" border-radius: 10px; padding: 5px; font-size: 18px; padding-left: 30px; font-family: Geneva; border: 1px solid; color: #ffffff; text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.25); background-color: #2e7ac1; *background-color: #0044cc;">
                        <label>Personal Information:</label>
                    </div>
                    <br>
                    
                    <div class="form-group col-lg-6 col-md-6 col-sm-12">
                        <br>
                        <label>First Name:</label>
                        <input class="form-control" type="text" name="fname" placeholder="ex: Ajit" required>
                    </div>
                    <div class="form-group col-lg-6 col-md-6 col-sm-12">
                        <br>
                        <label>Last Name:</label>
                        <input class="form-control"type="text" name="lname" placeholder="ex: Kumar" required>
                    </div>
                    <div class="form-group col-lg-12 col-md-12 col-sm-12">
                        <label>Address:</label>
                        <input class="form-control" type="text" name="address" placeholder="ex: D-23, Safron Street, Sagarbhanga">
                    </div>
                    <div class="form-group col-lg-4 col-md-4 col-sm-12">
                        <label>City:</label>
                        <input class="form-control" type="text" name="city" placeholder="ex: Durgapur">
                    </div>
                    <div class="form-group col-lg-4 col-md-4 col-sm-12">
                        <label>State:</label>
                        <input class="form-control" type="text" name="state" placeholder="ex: West Bengal">
                    </div>
                    <div class="form-group col-lg-4 col-md-4 col-sm-12">
                        <label>Zipcode:</label>
                        <input class="form-control" type="text" name="zipcode" placeholder="ex: 784532">
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <label>Gender:</label> 
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <label>Male</label>
                        <input  type="checkbox" name="gender" value="male" >
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <label>Female</label>
                        <input type="checkbox" name="gender" value="female">
                    </div>
                    
                    <div class="form-group col-lg-6 col-md-6 col-sm-12">
                        <br>
                        <label>Mobile Number:</label>
                        <input class="form-control" type="text" name="number" placeholder="ex: 9876543210" required>
                        <br>
                    </div>
                    <div class="form-group col-lg-6 col-md-6 col-sm-12">
                        <br>
                        <label>Email ID:</label>
                        <input class="form-control"type="email" name="email" placeholder="ex: jack@gmail.com">
                        <br>
                    </div>
                </div>
                
                <div>
                    
                    <div class="col-lg-12 col-md-12 col-sm-12 " style="border-radius: 10px; padding: 5px; font-size: 18px; padding-left: 30px; font-family: Geneva; border: 1px solid; color: #ffffff; text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.25); background-color: #2e7ac1; *background-color: #0044cc;">
                        <label>Position you are applying:</label>
                        
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <br>
                        <label>Manager</label>
                        <input type="checkbox" name="Position" value="Manager" > 
                        <br>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <br>
                        <label>Supervisor</label>
                        <input type="checkbox" name="Position" value="Supervisor">
                        <br>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <br>
                        <label>Labor</label>    
                        <input type="checkbox" name="Position" value="Labor"> 
                        <br>
                    </div>
                    
                    </div>
                
                <div>
                    
                    
                <div>
                    
                    <div class="col-lg-12 col-md-12 col-sm-12 " style="border-radius: 10px; padding: 5px; font-size: 18px; padding-left: 30px; font-family: Geneva; border: 1px solid; color: #ffffff; text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.25); background-color:#2e7ac1; *background-color: #0044cc;">
                        <label>Employment Type:</label>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <br>
                        <label>Full time</label>
                        <input type="checkbox" name="employment" value="Full-time" >
                        <br>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <br>
                        <label>Part time</label>
                        <input type="checkbox" name="employment" value="Part-time"> 
                        <br>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <br>
                        <label>Contract</label>    
                        <input type="checkbox" name="employment" value="Contract"> 
                        <br>
                    </div>
                    
                    </div>
                
                
                <div class="form-group">
                    
                    <div class="col-lg-12 col-md-12 col-sm-12 " style="border-radius: 10px; padding: 5px; font-size: 18px; padding-left: 30px; font-family: Geneva; border: 1px solid;  color: #ffffff; text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.25); background-color:#2e7ac1; *background-color: #0044cc;">
                        <label >Education:</label>
                       
                    </div>
                     
                    
                    <div style="text-align:center; margin-top: 30px; padding: 50px;">
                        
                        <select>
                          <option value="Select">Select</option>
                          <option value="None">None</option>
                          <option value="Masters">Masters</option>
                          <option value="Bachelors">Bachelors</option>
                          <option value="High">High School</option>
                          <option value="Primary">Primary School</option>
                          <option value="Less">Less than Primary School</option>
                        </select>
                    </div>
                </div>
                
                <div class="form-group">
                    <div class="col-lg-12 col-md-12 col-sm-12 " style="border-radius: 10px; padding: 5px; font-size: 18px; padding-left: 30px; font-family: Geneva; border: 1px solid;  color: #ffffff; text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.25); background-color:#2e7ac1; *background-color: #0044cc;">
                        <label >Previous Experience:</label>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12 ">
                        <br>
                        <label>Name of the company:</label>
                        <input class="form-control" type="text" name="company" placeholder="ex: L&T">
                         <br>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12 ">
                         <br>
                        <label>Title of the job:</label>
                        <input class="form-control" type="text" name="job-title" placeholder="ex: Labor">
                         <br>
                    </div>
            
                </div>
                
                 <div class="form-group">
                     <div class="col-lg-12 col-md-12 col-sm-12 " style="border-radius: 10px; padding: 5px; font-size: 18px; padding-left: 30px; font-family: Geneva; border: 1px solid;  color: #ffffff; text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.25); background-color:#2e7ac1; *background-color: #0044cc;">
                        <label >Signature Disclaimer:</label>
                        
                    </div>
                
                    
                    <p>
                    
                    I certify that my answers are true and complete to the best of my knowledge.
                        If this application leads to employment, 
                        I understand that false or misleading information in my application or 
                        interview may result in my employment being terminated.</p>
                    <div class="col-lg-6 col-md-6 col-sm-12 ">
                        <label>Signature:</label>
                        <input class="form-control" type="text" name="name" placeholder="ex: Ajit Kumar">
                        <br>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12 ">
                        <label>Date:</label>
                        <input class="form-control" type="text" name="date" placeholder="ex: 28/06/2018">
                        <br>
                    </div>
                </div>
                
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href= "/campgrounds">Go Back</a>
            
        </div>
        

    </div>
    </div>
    

<br>
<br>





<% include ./partials/footer %>
